<div class="container-fluid mt-5 contact-style" id="contactid">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <h1 class="text-center main-heading">Contact us</h1>
      <p class="text-center sub-heading">We will be happy to help you</p>

      <div class="row">
        <div class="col-md-6 col-12 mx-auto">
          <form action="/contact" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Name</label>
              <input type="text" class="form-control" id="exampleInputEmail1"  name="name">
              {{#if error}}
              <p>{{error.message}}</p>
              {{/if}}
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                name="email">

            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Phone</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="phone">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Message</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="message">
            </div>
            <button type="submit" class="btn-style btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>